<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="parking_lot_action" model="ir.actions.act_window">
        <field name="name">停车场管理</field>
        <field name="res_model">parking.lot</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="context">{'search_default_active': True}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                在园区下创建停车场。
            </p>
        </field>
    </record>

    <record id="parking_lot_view_tree" model="ir.ui.view">
        <field name="name">parking.lot.tree</field>
        <field name="model">parking.lot</field>
        <field name="arch" type="xml">
            <tree string="parking_lot_tree">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="park_id"/>
                <field name="parking_space_cnt" sum="总计"/>
            </tree>
        </field>
    </record>

    <record id="parking_lot_view_form" model="ir.ui.view">
        <field name="name">parking.lot.form</field>
        <field name="model">parking.lot</field>
        <field name="arch" type="xml">
            <form string="parking_lot_form">
                <group>
                    <group>
                        <field name="name"/>
                    </group>
                    <group>
                        <field name="parking_space_cnt"/>
                    </group>
                </group>
                <field name="parking_space_ids">
                    <tree>
                        <field name="name"/>
                        <field name="parking_space_type_id"/>
                    </tree>
                </field>
            </form>
        </field>
    </record>

</odoo>
