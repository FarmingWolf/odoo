<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="parking_action" model="ir.actions.act_window">
        <field name="name">园区停车场管理</field>
        <field name="res_model">park</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="context">{'search_default_active': True}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                创建园区→创建园区下辖停车场→创建停车位。
            </p>
        </field>
    </record>

    <record id="parking_view_tree" model="ir.ui.view">
        <field name="name">park.tree</field>
        <field name="model">park</field>
        <field name="arch" type="xml">
            <tree string="park_tree" editable="bottom">
                <field name="name"/>
                <field name="parking_lot_cnt" sum="总计停车场数量"/>
                <field name="parking_space_cnt" sum="总计停车位数量"/>
            </tree>
        </field>
    </record>

    <record id="parking_view_form" model="ir.ui.view">
        <field name="name">park.form</field>
        <field name="model">park</field>
        <field name="arch" type="xml">
            <form string="park_form">
                <group>
                    <field name="name"/>
                    <field name="parking_lot_ids">
                        <tree>
                            <field name="sequence" widget="handle"/>
                            <field name="name"/>
                            <field name="parking_space_cnt" sum="总计停车位数量"/>
                        </tree>
                    </field>
                </group>
            </form>
        </field>
    </record>

</odoo>
