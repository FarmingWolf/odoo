            <t t-if="statistics.isReady">
                <t t-foreach="statistics.data" t-as="each_company_data" t-key="each_company_data">
                    <t t-if="Object.values(companies).length &gt; 1">
                        <div t-esc="companies[each_company_data].name" class="o_company_name"/>
                    </t>
                    <div class="d-flex flex-wrap">
                        <t t-foreach="items" t-as="item" t-key="item.id">
                            <DashboardItem t-if="!state.disabledItems.includes(item.id)" size="item.size || 1">
