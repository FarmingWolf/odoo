            <p class="o_view_nocontent_smiling_face">
                录入中的合同都在这里。
            </p>
        </field>
    </record>

    <record id="estate_lease_contract_view_search" model="ir.ui.view">
        <field name="name">estate.lease.contract.view.search</field>
        <field name="model">estate.lease.contract</field>
        <field name="arch" type="xml">
            <search string="合同检索">
                <filter string="有效合同" name="state_valid" domain="[('state','!=', 'invalid')]"/>
                <filter string="过期/失效合同" name="state_all" domain="[('state','=', 'invalid')]"/>
                <separator/>
                <filter string="合同签订月份" name="date_sign_month" date="date_sign"/>
                <separator/>
                <field string='招商员' name="sales_person_id" context="{'group_by': 'sales_person_id'}"
                       groups="estate_lease_contract.contract_brokerage_fee_manage"/>
                <group expand='1' string='按资产分组'>
                    <filter string='按资产分组' name="property_ids" context="{'group_by': 'property_ids'}"/>
                    <filter string='按承租人组' name="renter_id" context="{'group_by': 'renter_id'}"/>
                    <filter string='按合同主体分组' name="party_a_unit_id" context="{'group_by': 'party_a_unit_id'}"/>
                </group>
                <searchpanel>
                    <field string='合同主体文件夹' name="party_a_unit_id" context="{'group_by': 'property_ids'}"/>
                    <field string='承租人合同文件夹' name="renter_id" context="{'group_by': 'property_ids'}"/>
                </searchpanel>
            </search>
        </field>
    </record>

