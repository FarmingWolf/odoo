        </field>
    </record>

    <record model="ir.ui.view" id="view_estate_contract_kanban">
        <field name="name">estate.lease.contract.kanban</field>
        <field name="model">estate.lease.contract</field>
        <field name="arch" type="xml">
            <kanban class="o_event_kanban_view" sample="1" group_create="False" group_delete="False" group_edit="False">
                <field name="default_context_contract_id" invisible="1"/>
                <field name="party_a_unit_invisible" invisible="1"/>
                <field name="sequence" invisible="1"/>
                <field name="property_ids" widget="many2many_tags" string="租赁房屋" options="{'color_field': 'color'}"/>
                <field name="party_a_unit_id" invisible="party_a_unit_invisible" string=""/>
                <field name="date_sign"/>
                <field name="date_start"/>
                <field name="date_rent_start"/>
                <field name="date_rent_end"/>
                <field name="state"/>
                <field name="rent_amount_year"/>
                <field name="parking_space_count"/>
                <field name="renter_id"/>
                <field name="sales_person_id" groups="estate_lease_contract.contract_brokerage_fee_manage"/>
                <field name="brokerage_fee" groups="estate_lease_contract.contract_brokerage_fee_manage" sum="中介费合计"/>
                <field name="registration_addr_count"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="d-flex flex-column p-0 oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_content p-0 m-0 position-relative row d-flex flex-fill">
                                <div class="col-4 text-bg-primary p-2 text-center d-flex flex-column justify-content-center">
                                    <div t-esc="luxon.DateTime.fromISO(record.date_rent_start.raw_value).toFormat('yyyy-MMM-d')"/>
                                    <div>
                                        <i class="oi oi-arrow-right me-2 o_event_fontsize_09" title="至"/>
                                    </div>
                                    <div>
                                        <t t-esc="luxon.DateTime.fromISO(record.date_rent_end.raw_value).toFormat('yyyy-MMM-d')"/>
                                    </div>
                                    <div>
                                        <i class="fa fa-cny me-2 o_event_fontsize_09" title="年租金"/>
                                        <t t-esc="record.rent_amount_year.value"/>
                                    </div>
                                    <div>
                                        <t t-if="record.parking_space_count != 0">
                                            <i class="fa fa-car me-2 o_event_fontsize_09" title="车位"/>
                                            <field name="parking_space_count"/>
                                            <span>　</span>
                                        </t>
                                        <t t-if="record.registration_addr_count != 0">
                                            <i class="fa fa-address-card-o me-2 o_event_fontsize_09" title="注册地址"/>
                                            <field name="registration_addr_count"/>
                                        </t>
                                    </div>
                                </div>
                                <div class="col-8 py-2 px-3 d-flex flex-column justify-content-between pt-3">
                                    <div>
                                        <div class="o_kanban_record_title o_text_overflow"
                                             t-att-title="record.name">
                                            <field name="property_ids" widget="many2many_tags"/>
                                        </div>
                                    </div>
                                    <div class="d-flex ps-1">
                                        <field class="fa fa-briefcase" name="party_a_unit_id" invisible="party_a_unit_invisible"/>
                                    </div>
                                    <div class="d-flex ps-1">
                                        <field class="fa fa-briefcase" name="renter_id"/>
                                    </div>
                                    <div class="o_kanban_record_bottom">

                                        <div class="oe_kanban_bottom_left">
                                            <field name="brokerage_fee"
                                                   groups="estate_lease_contract.contract_brokerage_fee_manage"/>
                                        </div>
                                        <div class="oe_kanban_bottom_right">
                                            <field name="sales_person_id" widget="many2one_avatar_user" readonly="1"/>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="estate_lease_contract_action" model="ir.actions.act_window">
        <field name="name">资产租赁合同列表（查看）</field>
        <field name="res_model">estate.lease.contract</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="views">[False, "tree"]</field>
        <field name="view_id" ref="estate_lease_contract_view_tree"/>
        <field name="context">{
            'search_default_state_valid': True,
            'search_default_group_by_property_ids': True,
            'search_default_active': True,
            'contract_read_only': True,
            'menu_root': 'estate.lease.contract',
            'from_menu_click_tree': True,
            }
        </field>
        <field name="domain">[('active', '=', True)]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                还没有合同信息。
            </p>
            <p>
                说明合同还没录入，或者录入了也没发布。
            </p>
        </field>
    </record>

    <record id="estate_lease_contract_party_b_action" model="ir.actions.act_window">
