                <field name="party_a_unit_invisible" column_invisible="1"/>
                <field name="date_rent_end" column_invisible="1"/>
                <field name="sequence" widget="handle"/>
                <field name="renter_id" string="入驻企业/个人"/>
                <field name="renter_contact_name"/>
                <field name="renter_contact_tel"/>
                <field name="renter_company_id" column_invisible="1"/>
            </tree>
        </field>
    </record>

