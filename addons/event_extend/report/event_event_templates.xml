<?xml version="1.0" encoding="utf-8"?>
<odoo>

<!-- EVENT A4 FOLDABLE BADGE (A4_french_fold) -->

<template id="event_report_template_venue_application">
    <style type="text/css">
        @import '/event_extend/static/src/scss/event_extend.scss';
    </style>
    <t t-call="web.html_container">
        <t t-call="web.internal_layout">
            <t t-foreach="docs" t-as="event">
                <div class="my_header">
                    <img t-if="event.organizer_id.image_128"
                         t-att-src="image_data_uri(event.organizer_id.image_128)"
                         class="img" />
                    <div class="number">
                        <span class="number">编号：</span>
                    </div>
                </div>
                <!-- 设置主体内容 -->
                <div style="margin-top: 50px">
                    <h1 class='title'>
                        场地使用申请书
                    </h1>

                    <p class="greetings" >
                        致国家广播电视总局四九一台：
                    </p>

                    <p class="report_paragraph">
                        现因拍摄场地需求，我方向贵台提出场地借用申请，具体申请如下：
                    </p>

                    <p class="report_paragraph">
                        一、借用场地用途：<span t-esc="event.name" style="border-bottom: 1px solid #000;"/>；
                    </p>

                    <p class="report_paragraph">
                        二、借用时间：
                        <span style="border-bottom: 1px solid #000;">　　　　　　　　　　　　　　　　　　　　</span>；
                    </p>
                    <p class="report_paragraph">
                        三、现场负责人及电话：
                        <span style="border-bottom: 1px solid #000;">　　　　　　　　　　　　　　　　</span>；
                    </p>
                    <p class="report_paragraph">
                        四、活动场地范围：
                        <span style="border-bottom: 1px solid #000;">　　　　　　　　　　　　　　　　　　</span>；
                    </p>
                    <p class="report_paragraph">
                        五、活动人数：
                        <span style="border-bottom: 1px solid #000;">　　　　　　　　　　　　　　　　　　　　</span>；
                    </p>
                    <p class="report_paragraph">
                        六、活动方案（详见附件）
                    </p>

                </div>

                <div class="applicant_div">
                    <div class="applicant_left"/>
                    <div class="applicant">
                        <div style="display: flex; justify-content: center;">
                            <span style="letter-spacing: 6.5px;">申请</span>
                            <span>方：北京中广艺伍零文化传播有限公司</span>
                        </div>
                        <div>
                            <span>申请日期：</span>
                        </div>
                    </div>
                </div>
                <!-- 设置页脚 -->
                <footer class="my_footer">
                    <span t-esc="len(event)"/>
                </footer>
            </t>
        </t>
    </t>
</template>

<template id="event_report_template_enter_exit_form">
    <style type="text/css">
        @import '/event_extend/static/src/scss/event_extend.scss';
    </style>
    <t t-call="web.html_container">
        <t t-call="web.internal_layout">
            <t t-foreach="docs" t-as="event">
                <div class="enter_exit_form_div" style="border-top: 2px solid black; height: 40px; ">
                    <div style="column-span: all;">
                        <span style="font-size: 18px;">491空间活动进出场单</span>
                    </div>
                </div>

                <div class="enter_exit_form_div">
                    <div class="grid-line">
                        <div class="grid-item-left" style="column-span: 1; width: 20%"><span>活动名称</span></div>
                        <div class="grid-item-right" style="column-span: 4; width: 80%">
                            <span t-esc="event.name"/>
                        </div>
                    </div>
                </div>

                <div class="enter_exit_form_div" style="background-color: red">
                    <div class="grid-line" style="column-span: 5;background-color: green">
                        <div class="grid-item-left" style="column-span: 1; width: 20%; background-color: blue">
                            <span style="background-color: red; align-self: center; display: flex">公司信息</span>
                        </div>
                        <div class="grid-item-right" style="column-span: 4; width: 80%; background-color: orange">
                            <div class="grid-line" style="column-span: 4;height: 50%; background-color: purple">
                                <span>　</span>
                            </div>
                            <div class="grid-line" style="column-span: 4;height: 50%; background-color: yellow">
                                <div class="grid-item-left" style="column-span: 1; width: 30%"><span>负责人及联系方式</span></div>
                                <div class="grid-item-right" style="column-span: 3; width: 70%; background-color: light-red"/>
                            </div>
                        </div>
                    </div>
                </div>

            </t>
        </t>
    </t>
</template>

</odoo>
